<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/rellay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradeint_background_new">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/imgUser1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="10dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="9dp"
                    android:id="@+id/profile_icon"
                    android:padding="8dp"
                    android:src="@drawable/ic_profile"
                    />

                <TextView
                    android:textStyle="bold"
                    android:padding="@dimen/_3sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_15sdp"
                    android:layout_toEndOf="@+id/profile_icon"
                    android:id="@+id/time_image_text"/>

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imgUser1"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/district1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/home_page"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/local_body1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/home_page"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/home_page"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/designation1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    />
            </LinearLayout>
            <TextView
                android:layout_below="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/timer"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"/>

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/vv"
        android:layout_below="@+id/rellay2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vv"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/qr_verification">

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_qr_code_scanner_barcode_icon"
                    android:id="@+id/print_icon1"/>

                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/print_icon1"
                    android:text="QR Verification"
                    android:textColor="@color/darkblue"
                    android:textSize="@dimen/_14sdp"/>
            </RelativeLayout>
            <View
                android:id="@+id/vv1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/d_grey4">

            </View>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
